<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 适配高度不够的屏幕 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_login_wrapper"
        android:background="@color/skin_main_bg_clr_grey"
        android:fillViewport="true"
        android:scrollbarThumbVertical="@drawable/ic_scrollbar"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20.0dp" >

            <RelativeLayout
                 android:id="@+id/rl_settings_set_pwd"
                android:layout_width="match_parent"
                android:layout_height="54.0dp"
                android:background="@drawable/selector_item_card_top_bg"                 
                android:clickable="true" >
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="@string/settings_set_pwd"
                    android:textColor="@color/skin_main_txt_clr_grey"
                    android:textSize="@dimen/txt_size_16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dp"
                    android:contentDescription="@null"
                    android:src="@drawable/common_icon_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:background="@color/skin_divider_line_clr" />

            <RelativeLayout
                android:id="@+id/rl_settings_set_bd_pwd"
                android:layout_width="match_parent"
                android:layout_height="54.0dp"
                android:background="@drawable/selector_item_card_bottom_bg"
                android:clickable="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="@string/settings_set_bd_pwd"
                    android:textColor="@color/skin_main_txt_clr_grey"
                    android:textSize="@dimen/txt_size_16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dp"
                    android:contentDescription="@null"
                    android:src="@drawable/common_icon_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_settings_offline_map"
                android:layout_width="match_parent"
                android:layout_height="54.0dp"
                android:layout_marginTop="10.0dp"
                android:background="@drawable/selector_item_card_bottom_bg"
                android:clickable="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="@string/settings_offline_map"
                    android:textColor="@color/skin_main_txt_clr_grey"
                    android:textSize="@dimen/txt_size_16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dp"
                    android:contentDescription="@null"
                    android:src="@drawable/common_icon_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_settings_msg_notify_set"
                android:layout_width="match_parent"
                android:layout_height="54.0dp"
                android:layout_marginTop="10.0dp"
                android:background="@drawable/selector_item_card_bottom_bg"
                android:clickable="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="@string/settings_msg_notify_set"
                    android:textColor="@color/skin_main_txt_clr_grey"
                    android:textSize="@dimen/txt_size_16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dp"
                    android:contentDescription="@null"
                    android:src="@drawable/common_icon_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_settings_about"
                android:layout_width="match_parent"
                android:layout_height="54.0dp"
                android:layout_marginTop="10.0dp"
                android:background="@drawable/selector_item_card_bottom_bg"
                android:clickable="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="@string/settings_about"
                    android:textColor="@color/skin_main_txt_clr_grey"
                    android:textSize="@dimen/txt_size_16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dp"
                    android:contentDescription="@null"
                    android:src="@drawable/common_icon_arrow" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_login_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_item_card_top_bg" >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dp"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:layout_marginTop="5.0dp"
            card_view:cardCornerRadius="3.0dp"
            card_view:cardElevation="4.0dp" >

            <com.mapgoo.snowleopard.widget.RippleButton
                xmlns:ripple="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tv_btn_logout"
                android:layout_width="match_parent"
                android:layout_height="48.0dp"
                android:background="@drawable/selector_btn_logout_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/settings_logout"
                android:textColor="@color/skin_main_txt_clr_white"
                android:textSize="@dimen/txt_size_18sp"
                ripple:alphaFactor="0.8"
                ripple:hover="true"
                ripple:rippleColor="@color/skin_ripple_btn_clr_red_hover" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>