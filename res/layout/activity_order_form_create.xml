<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<ListView 
    android:id="@+id/laoren_list"
    android:layout_weight="1.0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    ></ListView>

<LinearLayout 
        android:layout_width="match_parent"
    android:layout_height="wrap_content"    
    android:background="@color/dark_color_bgd"
     android:orientation="vertical">
     
    <LinearLayout 
        android:layout_width="match_parent"
    android:layout_height="wrap_content"    
    android:padding="5dp"
     android:orientation="horizontal">
<TextView 
        android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_weight="2.6"
    android:gravity="right"
    android:paddingRight="5dp"
    android:text="@string/order_create_fuwu_laoren"       
    android:textSize="18sp"
    android:textColor="@color/normal_color_text"
    />  
<TextView 
    android:id="@+id/order_create_for_laoren"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_weight="1.0"
    android:textSize="18sp"
    android:textColor="@color/dark_color_text"    
    />            
    </LinearLayout>

        <LinearLayout 
        android:layout_width="match_parent"
    android:layout_height="30dp"    
     android:orientation="horizontal">
<TextView 
        android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_weight="1.1"
    android:gravity="right|center_vertical"
    android:text="@string/order_create_yuyue_time"       
    android:textSize="18sp"
        android:paddingRight="5dp"
    android:textColor="@color/normal_color_text"
    />  
<LinearLayout 
    android:id="@+id/order_create_data_click"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
     android:layout_weight="1.0"    
     android:clickable="true"
	android:onClick="onClick"
    android:orientation="horizontal">
 <TextView 
    android:id="@+id/order_create_data_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_weight="1.0"
    android:text="2014-12-12"
    android:gravity="center"
    android:textSize="18sp"
    android:textColor="@color/normal_color_text"
    android:background="@drawable/order_create_time_bgd"
     />
 <ImageView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
	android:layout_weight="1.0" 
    android:background="@drawable/order_create_time_arrow"
     />
</LinearLayout>
<View 
    android:layout_width="5dp"
    android:layout_height="match_parent"     
    />
<LinearLayout 
    android:id="@+id/order_create_time_click"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:layout_weight="1.0"    
    android:clickable="true"
	android:onClick="onClick"
    android:orientation="horizontal">
 <TextView 
    android:id="@+id/order_create_time_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_weight="1.0"       
    android:text="12:30"
    android:gravity="center"
    android:textSize="18sp"
    android:background="@drawable/order_create_time_bgd"
    android:textColor="@color/normal_color_text"
     />
 <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:layout_weight="1.1" 
    android:background="@drawable/order_create_time_arrow"
     />  
</LinearLayout> 

    </LinearLayout>

                <LinearLayout 
                    android:id="@+id/order_create_pay"
        android:layout_width="match_parent"
    android:layout_height="30dp"    
     android:orientation="horizontal">
<TextView 
        android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_weight="2.5"
    android:gravity="right|center_vertical"
    android:text="@string/order_create_yuyue_pay"       
    android:textSize="18sp"
        android:paddingRight="5dp"
    android:textColor="@color/normal_color_text"
    />  
<LinearLayout 
    android:id="@+id/order_create_pay_click"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
     android:layout_weight="1.0"    
     android:clickable="true"
	android:onClick="onClick"
    android:orientation="horizontal">
 <TextView 
    android:id="@+id/order_create_pay_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_weight="1.0"
    android:text="2014-12-12"
    android:gravity="center"
    android:textSize="18sp"
    android:textColor="@color/normal_color_text"
    android:background="@drawable/order_create_time_bgd"
     />
 <ImageView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
	android:layout_weight="1.0" 
    android:background="@drawable/order_create_time_arrow"
     />
</LinearLayout>
</LinearLayout>
        
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
     android:layout_weight="1.0"    
     android:padding="5dp"
    android:orientation="horizontal">
 <TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_weight="2.6" 
    android:text="@string/order_create_beizhu"
    android:gravity="right|top"
    android:textSize="18sp"
        android:paddingRight="5dp"
    android:textColor="@color/normal_color_text"
     /> 
 <EditText 
     android:id="@+id/order_create_remak"
     android:layout_width="match_parent"
    android:layout_height="60dp"     
    android:layout_weight="1.0"
    android:padding="5dp"
    android:gravity="left|top"
    android:textColor="@color/normal_color_text"
     android:textSize="16sp"
     android:background="@drawable/order_create_time_bgd"
     
     /> 
</LinearLayout>
     
    <Button 
        android:id="@+id/shangpin_yuyue"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="提交"
    android:layout_margin="20dp"
    android:background="@drawable/selector_button_ruhu_tijiao"
    android:textColor="@color/white_color_text"
    android:onClick="onClick"
        />
    </LinearLayout>
</LinearLayout>
