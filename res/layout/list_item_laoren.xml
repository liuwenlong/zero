<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical" >

<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"    
    >
<LinearLayout 
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical" >
            <com.mapgoo.zero.ui.widget.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ruhu_laoren_touxiang"
                android:layout_width="60.0dp"
                android:layout_height="60.0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5.0dp"
                android:layout_marginRight="5.0dp"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:src="@drawable/ic_avatar_holder"
                app:border_color="#FFDDDDDD"
                app:border_width="2.0dp" />
</LinearLayout>

<LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical" >
    
	<LinearLayout
	         android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1.0"
	    android:orientation="horizontal">
	    
		<LinearLayout
		         android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1.0"
		    android:orientation="horizontal">       
		  <TextView 
		     android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:layout_alignParentLeft="true"
		    android:text="@string/ruhu_xinming"
		    android:textColor="@color/dark_color_text"/>  
		   <TextView 
		       android:id="@+id/laoren_list_item_xinming"
		     android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:text="张三"
		    android:textColor="@color/normal_color_text"/>  
		</LinearLayout>
	      
		<LinearLayout
		         android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		        android:layout_weight="1.0"
		    android:orientation="horizontal">      
		  <TextView 
		     android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:text="@string/ruhu_leixin"
		    android:layout_marginLeft="5dp"
		    android:textColor="@color/dark_color_text"
		      />  
		   <TextView 
		       android:id="@+id/laoren_list_item_leixing"
		     android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		        android:layout_alignParentRight="true"
		    android:text="@string/ruhu_leixin_normal"
		    android:textColor="@color/normal_color_text"
		      />
		</LinearLayout>
	</LinearLayout>    

	<LinearLayout
	         android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1.0"
	    android:orientation="horizontal">
	    
		<LinearLayout
		         android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1.0"
		    android:orientation="horizontal">       
		  <TextView 
		     android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:layout_alignParentLeft="true"
		    android:text="@string/ruhu_xingbie"
		    android:textColor="@color/dark_color_text"/>  
		   <TextView 
		       android:id="@+id/laoren_list_item_xingbie"
		     android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:text="男"
		    android:textColor="@color/normal_color_text"/>  
		</LinearLayout>
	      
		<LinearLayout
		         android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		        android:layout_weight="1.0"
		    android:orientation="horizontal">      
		  <TextView 
		     android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:text="@string/ruhu_nianling"
		    android:layout_marginLeft="5dp"
		    android:textColor="@color/dark_color_text"
		      />  
		   <TextView 
		       android:id="@+id/laoren_list_item_nianling"
		     android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		        android:layout_alignParentRight="true"
		         android:text="86"
		    android:textColor="@color/normal_color_text"
		      />
		</LinearLayout>
	</LinearLayout>    	

		<LinearLayout
		         android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1.0"
		    android:orientation="horizontal">      
		  <TextView 
		     android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:text="@string/ruhu_shenfenzheng"
		    android:textColor="@color/dark_color_text"
		      />  
		   <TextView 
		       android:id="@+id/laoren_list_item_shenfenzheng"
		     android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		     android:text="431012345678"
		        android:layout_alignParentRight="true"
		    android:textColor="@color/normal_color_text"
		      />
		</LinearLayout>

		<View 
		         android:layout_width="match_parent"
		    android:layout_height="1dp"		
		    android:background="@color/home_color_line"    
		    />		
</LinearLayout>
</LinearLayout>

<LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"  	    
	        android:orientation="horizontal" >

<ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"  	
	        android:src="@drawable/home_man_dianhua"    />

 	<TextView 
 	         android:id="@+id/laoren_list_item_dianhua"
 	         android:padding="2dp"
 	         android:layout_weight="1.0"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"  	
	        android:gravity="center_vertical"
	        android:text="86357653"
	        android:textSize="18sp"
	        android:textColor="@color/normal_color_text"
 	    />
<ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"  	
	        android:src="@drawable/home_devices_not_location"    /> 	
 </LinearLayout>	
 
<LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:orientation="horizontal" >
<ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"  	
	        android:src="@drawable/home_man_dizhi"    />
 	<TextView 
 	         android:id="@+id/laoren_list_item_dizhi"
 	         android:padding="2dp"
 	         android:layout_weight="1.0"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"  	
	        android:gravity="center_vertical"
	        android:text="北京市西城区陶然停"
	        android:textSize="18sp"
	        android:textColor="@color/normal_color_text"
 	    />
 </LinearLayout>	



</LinearLayout>
