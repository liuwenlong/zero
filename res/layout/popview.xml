<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dip"
    android:layout_height="wrap_content"
    android:layout_margin="2dip"
    android:layout_weight="1"
    android:background="@drawable/qipao" >

    <LinearLayout
        android:id="@+id/my_car_name"
        android:layout_width="230dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/loaren_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="100dip"
            android:singleLine="true"
            android:textColor="#f12706"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_gsm"
            android:layout_width="30dip"
            android:layout_height="22dip"
            android:src="@drawable/icon_gsm5" />

        <ImageView
            android:id="@+id/iv_gps"
            android:layout_width="30dip"
            android:layout_height="22dip"
            android:src="@drawable/icon_gps" />

        <TextView
            android:id="@+id/tv_gps"
            android:layout_width="wrap_content"
            android:layout_height="22dip"
            android:gravity="center|left"
            android:textColor="#000000"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_power"
            android:layout_width="30dip"
            android:layout_height="22dip"
            android:src="@drawable/icon_power5" />
    </LinearLayout>

    <ImageView
        android:id="@+id/my_image"
        android:layout_width="225dip"
        android:layout_height="1dip"
        android:layout_below="@+id/my_car_name"
        android:background="@drawable/group_divider" >
    </ImageView>

        <LinearLayout
            android:layout_width="230dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_image"
            android:padding="3dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/laoren_location_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="13sp" />
            
              <TextView
                android:id="@+id/laoren_location_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/color_main_blue"
                android:textSize="16sp" />
                        
    	</LinearLayout>
 

</RelativeLayout>