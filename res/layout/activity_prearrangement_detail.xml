<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin_main_bg_clr_grey"
    android:fillViewport="true"
    android:scrollbarThumbVertical="@drawable/ic_scrollbar" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dp"
            android:divider="@drawable/divider_linear_vertical_1px"
            android:orientation="vertical"
            android:showDividers="middle" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54.0dp"
                android:background="@drawable/selector_item_card_top_bg"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/prearrange_type"
                    android:textColor="@color/skin_main_txt_clr_grey"
                    android:textSize="@dimen/txt_size_16sp" />

                <TextView
                    android:id="@+id/tv_prearrange_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center|right"
                    android:textColor="@color/skin_main_txt_clr_light_grey"
                    android:textSize="@dimen/txt_size_16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54.0dp"
                android:background="@drawable/selector_item_card_middle_bg"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/prearrange_time"
                    android:textColor="@color/skin_main_txt_clr_grey"
                    android:textSize="@dimen/txt_size_16sp" />

                <TextView
                    android:id="@+id/tv_prearrange_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center|right"
                    android:textColor="@color/skin_main_txt_clr_light_grey"
                    android:textSize="@dimen/txt_size_16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54.0dp"
                android:background="@drawable/selector_item_card_middle_bg"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/prearrange_store"
                    android:textColor="@color/skin_main_txt_clr_grey"
                    android:textSize="@dimen/txt_size_16sp" />

                <TextView
                    android:id="@+id/tv_prearrange_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center|right"
                    android:textColor="@color/skin_main_txt_clr_light_grey"
                    android:textSize="@dimen/txt_size_16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_item_card_middle_bg"
                android:clickable="true"
                android:minHeight="54.0dp"
                android:onClick="onClick"
                android:orientation="vertical"
                android:paddingBottom="12.0dp"
                android:paddingTop="12.0dp" >

                <TextView
                    android:id="@+id/tv_car_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/prearrange_car"
                    android:textColor="@color/skin_main_txt_clr_grey"
                    android:textSize="@dimen/txt_size_16sp" />

                <TextView
                    android:id="@+id/tv_prearrange_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="72.0dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center|right"
                    android:textColor="@color/skin_main_txt_clr_light_grey"
                    android:textSize="@dimen/txt_size_16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54.0dp"
                android:background="@drawable/selector_item_card_bottom_bg"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/prearrange_accept_status"
                    android:textColor="@color/skin_main_txt_clr_grey"
                    android:textSize="@dimen/txt_size_16sp" />

                <TextView
                    android:id="@+id/tv_prearrange_accept_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center|right"
                    android:textColor="@color/skin_main_txt_clr_light_grey"
                    android:textSize="@dimen/txt_size_16sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54.0dp"
            android:layout_marginTop="16.0dp"
            android:background="@drawable/selector_item_card_top_bg"
            android:clickable="true"
            android:onClick="onClick"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/prearrange_customer"
                android:textColor="@color/skin_main_txt_clr_grey"
                android:textSize="@dimen/txt_size_16sp" />

            <TextView
                android:id="@+id/tv_prearrange_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="center|right"
                android:textColor="@color/skin_main_txt_clr_light_grey"
                android:textSize="@dimen/txt_size_16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="@color/skin_divider_line_clr" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_item_card_bottom_bg"
            android:clickable="true"
            android:minHeight="54.0dp"
            android:onClick="onClick"
            android:orientation="vertical"
            android:paddingBottom="12.0dp"
            android:paddingTop="12.0dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/prearrange_remarks"
                android:textColor="@color/skin_main_txt_clr_grey"
                android:textSize="@dimen/txt_size_16sp" />

            <TextView
                android:id="@+id/tv_prearrange_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="72.0dp"
                android:layout_marginRight="20dp"
                android:gravity="center|right"
                android:textColor="@color/skin_main_txt_clr_light_grey"
                android:textSize="@dimen/txt_size_16sp" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_btn_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dp"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:layout_marginTop="30.0dp"
            card_view:cardCornerRadius="3.0dp"
            card_view:cardElevation="4.0dp" >

            <com.mapgoo.zero.ui.widget.RippleButton
                xmlns:ripple="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tv_btn_cancle"
                android:layout_width="match_parent"
                android:layout_height="48.0dp"
                android:background="@drawable/selector_redbtn_bg"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/prearrange_cancle"
                android:textColor="@color/skin_main_txt_clr_white"
                android:textSize="@dimen/txt_size_16sp"
                ripple:alphaFactor="0.8"
                ripple:hover="true"
                ripple:rippleColor="@color/skin_main_btn_clr_redblue_hover" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>