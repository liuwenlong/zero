<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dip"
    android:layout_height="wrap_content"
    android:layout_margin="2dip"
    android:layout_weight="1"
    android:background="@drawable/qipao" >

    <LinearLayout
        android:id="@+id/my_car_name"
        android:layout_width="230dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/car_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="100dip"
            android:singleLine="true"
            android:textColor="#f12706"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_gsm"
            android:layout_width="30dip"
            android:layout_height="22dip"
            android:src="@drawable/icon_gsm5" />

        <ImageView
            android:id="@+id/iv_gps"
            android:layout_width="30dip"
            android:layout_height="22dip"
            android:src="@drawable/icon_gps" />

        <TextView
            android:id="@+id/tv_gps"
            android:layout_width="wrap_content"
            android:layout_height="22dip"
            android:gravity="center|left"
            android:textColor="#000000"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_power"
            android:layout_width="30dip"
            android:layout_height="22dip"
            android:src="@drawable/icon_power5" />
    </LinearLayout>

    <ImageView
        android:id="@+id/my_image"
        android:layout_width="225dip"
        android:layout_height="1dip"
        android:layout_below="@+id/my_car_name"
        android:background="@drawable/group_divider" >
    </ImageView>

    <LinearLayout
        android:id="@+id/my_location"
        android:layout_width="230dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_image"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="230dip"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/car_times_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/car_speed_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/car_meliage_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/my_progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/progressbar" >
            </ProgressBar>

            <TextView
                android:id="@+id/car_location_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxWidth="208dip"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#036e4c"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_shebeiinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-20dip"
            android:paddingBottom="8dip"
            android:paddingTop="12dip"
            android:src="@drawable/icon_shebeninfo" />
    </LinearLayout>

</RelativeLayout>
