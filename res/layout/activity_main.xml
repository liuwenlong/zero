<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin_main_bg_clr_grey" >
 <!--
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:fillViewport="true"
        android:scrollbars="none"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrMode="pullDownFromTop" >
        -->
<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical">
    
 <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:padding="5dp"
        android:orientation="horizontal" >
        
 <com.mapgoo.zero.ui.widget.CircleImageView 
                android:id="@+id/avatar"
                android:layout_width="100.0dp"
                android:layout_height="100.0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.0dp"
                android:clickable="true"
                android:src="@drawable/ic_launcher"
                app:border_color="#FFDDDDDD"
                app:border_width="2.0dp" />
 
 <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dp"
  		android:orientation="vertical" >
	  <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	  		android:orientation="horizontal" > 		
	     <TextView 
	         android:id="@+id/man_name"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"  
	         android:layout_gravity="center_vertical"
	        android:layout_weight="2"
	        android:singleLine="true"
	        android:gravity="center_vertical"
	        android:textSize="18sp"
	        android:textColor="@color/normal_color_text"
	        android:text="名字 "/>
	     <ImageView 
	         android:id="@+id/laore_dingwei_icon"
	         android:layout_width="0dp"
	        android:layout_height="wrap_content"  
	        android:layout_weight="1"
	        android:layout_gravity="center_vertical"
	      android:src="@drawable/home_devices_not_location"           
	         />
	 </LinearLayout>
	<View 
	  android:layout_width="match_parent"
	  android:layout_height="1dp"
	   android:background="@color/home_color_line"/>
	
	  <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:padding="5dp"
	  		android:orientation="horizontal" > 		
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"  
	        android:singleLine="true"
	        android:gravity="center_vertical"
	        android:textSize="18sp"
	        android:textColor="@color/dark_color_text"
	        android:text="@string/home_leixin"/>
	     <TextView 
	         android:id="@+id/home_leixing_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"  
	        android:singleLine="true"
	        android:textColor="@color/normal_color_text"
	        android:gravity="center_vertical"
	        android:textSize="18sp"/>	     
	 </LinearLayout>
	 
	  <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:padding="5dp"
	  		android:orientation="horizontal" > 		
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"  
	        android:singleLine="true"
	        android:gravity="center_vertical"
	        android:textSize="18sp"
	        android:textColor="@color/dark_color_text"
	        android:text="@string/home_shenfenzhen"/>
	     <TextView 
	         android:id="@+id/home_shenfenzhen_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"  
	        android:singleLine="true"
	        android:textColor="@color/normal_color_text"
	        android:gravity="center_vertical"
	        android:textSize="18sp"/>	     
	 </LinearLayout>
 </LinearLayout>   
  </LinearLayout>  

 	<View 
	  android:layout_width="match_parent"
	  android:layout_height="1dp"
	   android:background="@color/home_color_line"/>
 	<TextView 
 	         android:id="@+id/home_zhuzhi"
 	         android:padding="2dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"  	
	        android:drawableLeft="@drawable/home_man_dizhi"    
	        android:textSize="18sp"
	        android:gravity="center_vertical"
	        android:textColor="@color/normal_color_text"
 	    />
 	<TextView 
 	         android:id="@+id/home_dianhua"
 	         android:padding="2dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/normal_color_text"
	        android:textSize="18sp"
	        android:gravity="center_vertical"
	        android:drawableLeft="@drawable/home_man_dianhua"
 	    /> 	
 	<View 
	  android:layout_width="match_parent"
	  android:layout_height="1dp"
	   android:background="@color/home_color_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:padding="5.0dp" >

                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.0dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:paddingLeft="4.0dp"
                    android:paddingRight="4.0dp" >

                    <RelativeLayout
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:paddingBottom="1.0dp"
                        android:paddingRight="1.0dp"
                        android:paddingTop="2.0dp" >

                        <com.mapgoo.zero.ui.widget.HomeButtonView
                            android:id="@+id/home_yuyue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/home_fuwu_yuyue"
                            android:clickable="true"
                            android:onClick="onClick" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:paddingBottom="1.0dp"
                        android:paddingLeft="1.0dp"
                        android:paddingTop="2.0dp" >

                        <com.mapgoo.zero.ui.widget.HomeButtonView
                            android:id="@+id/home_weizhi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/home_weizhi_huwei"
                            android:clickable="true"
                            android:onClick="onClick" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.0dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:paddingLeft="4.0dp"
                    android:paddingRight="4.0dp" >

                    <RelativeLayout
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:paddingBottom="2.0dp"
                        android:paddingRight="1.0dp"
                        android:paddingTop="1.0dp" >

                        <com.mapgoo.zero.ui.widget.HomeButtonView
                            android:id="@+id/home_rufu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/home_rufu_xunshi"
                            android:clickable="true"
                            android:onClick="onClick" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:paddingBottom="1.0dp"
                        android:paddingLeft="1.0dp"
                        android:paddingTop="2.0dp" >

                        <com.mapgoo.zero.ui.widget.HomeButtonView
                            android:id="@+id/home_dingdan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/home_wode_dingdian"
                            android:clickable="true"
                            android:onClick="onClick" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>	
 	
 	
</LinearLayout>
 <!--  </com.handmark.pulltorefresh.library.PullToRefreshScrollView> -->  

</RelativeLayout>