<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin_main_bg_clr_grey"
    android:orientation="vertical" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="0.0dp"
        android:layout_weight="4.0"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="2.0"
        android:background="@drawable/common_card_top_background"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical" >

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dp"
                android:layout_marginRight="10.0dp"
                card_view:cardCornerRadius="3.0dp"
                card_view:cardElevation="4.0dp" >

                <com.mapgoo.zero.ui.widget.RippleButton
                    xmlns:ripple="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/tv_btn_send_loc"
                    android:layout_width="match_parent"
                    android:layout_height="48.0dp"
                    android:background="@drawable/selector_redbtn_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="@string/rescue_send_loc"
                    android:textColor="@color/skin_main_txt_clr_white"
                    android:textSize="@dimen/txt_size_16sp"
                    ripple:alphaFactor="0.8"
                    ripple:hover="true"
                    ripple:rippleColor="@color/skin_main_btn_clr_redblue_hover" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical" >

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dp"
                android:layout_marginRight="10.0dp"
                card_view:cardCornerRadius="3.0dp"
                card_view:cardElevation="4.0dp" >

                <com.mapgoo.zero.ui.widget.RippleButton
                    xmlns:ripple="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/tv_btn_call_for_prearrange"
                    android:layout_width="match_parent"
                    android:layout_height="48.0dp"
                    android:background="@drawable/selector_redbtn_bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="@string/rescue_call_for_prearrange"
                    android:textColor="@color/skin_main_txt_clr_white"
                    android:textSize="@dimen/txt_size_16sp"
                    ripple:alphaFactor="0.8"
                    ripple:hover="true"
                    ripple:rippleColor="@color/skin_main_btn_clr_redblue_hover" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>