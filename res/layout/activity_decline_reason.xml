<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  	android:padding="10dp"
 
    android:orientation="vertical" >
 

     
    <TextView    
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:textSize="18sp"
     android:textColor="@color/dark_color_text"
    android:text="@string/fws_order_jujue_reason"
    />    
     
<EditText   
    android:id="@+id/msg_read_msg"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="10dp"
    android:padding="5dp"
    android:gravity="top|left"
    android:textSize="18sp"
    android:textColor="@color/normal_color_text"
    android:background="@drawable/order_create_time_bgd"
    />

<View 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1.0"    />
<RelativeLayout 
        android:layout_width="match_parent"
    android:layout_height="50dp"    
    android:layout_marginBottom="10dp"
    >
<Button 
        android:id="@+id/order_form_desline"
        android:layout_width="130dp"
    android:layout_height="50dp"
    android:text="@string/order_form_desline"
	android:layout_centerHorizontal="true"
    android:onClick="onClick"
    android:background="@drawable/selector_button_ruhu_tijiao"
    android:textColor="@color/white_color_text"
        />
</RelativeLayout>
</LinearLayout>
