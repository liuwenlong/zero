<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 阴影部分 -->
    <!-- top代表下边的阴影高度，left代表右边的阴影宽度。其实也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->
    <item >
        <shape android:shape="rectangle" >
            <solid android:color="@color/skin_card_bg_shadow_clr" />
            <corners android:radius="4.0dp"/>
        </shape>
    </item>

    <!-- 背景部分 -->
    <!-- bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item android:top="1.6dp"  android:bottom="1.0dp" android:left="0.5px" android:right="0.5px">
        <shape android:shape="rectangle" >
            <solid android:color="@color/skin_card_bg_clr" />
            <corners android:radius="4.0dp"/>
        </shape>
    </item>

</layer-list>